* { margin: 0; padding: 0; 
     font-family: verdana, sans-serif;  }

/* basic page outline */
body { background: #110f0d; } 
div.page { width: 800px; margin: 0 auto; background-color:white; }

/* basic text styles */
h1, h2, h3 { color: #F62900; letter-spacing: -1px; }
h1, h2, h3, p, li { line-height: 28px; margin-bottom:  20px; }
h1 { font-size: 22pt; }
h2 { font-size: 17pt; }
h3 { font-size: 12pt; }
p.subtitle { display: none; margin-top: -18px; margin-left: 2px; font-family: verdana, arial, sans-serif; 
  font-size: 14px; font-style: italic; border-bottom: 1px dotted #390; }
p.warning, p.error { border-top: 1px solid; border-bottom: 1px solid; }
p.warning { color: orange; }
p.error { color: red; }

/* link styles */
a { color: #F62900; text-decoration: none; }
a:hover { color: #110f0d; text-decoration: underline; }

/* page layout */
div.banner > div.menu { height: 30px; }
div.banner > div.title h1 {
  font-size:  15pt; text-align: right; letter-spacing: 0; padding-top: 20px; margin-right:30px; 
  color: #110f0d; margin-bottom: 0;
}
div.banner > div.header { width:800px; height:300px; background-image:  url( /images/banner );}
div.banner h1 { font-size: 40px; }

div.banner ul.menu { display: block; float: right; margin-right: 30px; }
div.banner ul.menu li { display: block; float: right; margin-left: 20px; text-transform: uppercase; font-size: 14px; } 
div.sidebar { float: right; margin-left: 30px; padding: 20px 20px 0 20px; 
  background: url(/images/gradient) repeat-x; width: 270px; height: 800px; border-left: 1px dashed #615341; 
}
div.sidebar h1 { font-size: 16pt; }
div.sidebar h2 { font-size: 12pt; }
div.sidebar p, div.sidebar li { font-family: arial, sans-serif; font-size: 14px; line-height: 1.2em; }
div.sidebar p.quote { color: #110f0d; padding-left: 10px; margin-bottom: 20px; font-size: 10pt; }
div.sidebar div.block { margin-bottom: 20px; border-bottom: 1px solid silver; }
div.main { border-top: 2px solid ##110f0d; padding: 20px 35px; overflow: scroll-x; width: 415px; }
div.main p, div.main li { font-size: 16px; line-height: 1.8em; color: #110f0d; }
div.footer { clear: both; text-align: center;  }
    
/* default image formatting */
img { border: none; margin: 0.5em; }
div.story img { float: right; }

/* default list formatting */
ul { margin-left: 0.5em; margin-bottom: 25px; }
li { margin-left: 1em; margin-bottom: 10px; list-style-type: square; }


div.feed { float: right; margin-top: 5px; line-height: 10px;
  font-family: verdana, arial, sans-serif; font-size: 9pt; }
div.feed img { margin: 0; padding: 0; margin-right: 5px; }
div.feed label { margin: 0; padding: 0; }
div.entries p.byline { margin-top: -10px; margin-bottom: 10px;
  font-family: verdana, arial, sans-serif; font-size: 8pt; }
div.entries h2 { font-family: verdana, arial, sans-serif; margin-top: 20px; }
span.author, span.date { font-weight: bold; }
p.more { font-family: verdana, arial, sans-serif; font-size: 12pt; 
  padding-bottom: 20px; 
  border-bottom: 1px solid #390; }
div.footer { margin-top: 20px; border-top: 1px silver solid; }
div.footer * { font-family: verdana, arial, sans-serif }
div.footer h1 { font-size: 12pt; }
div.footer h2 { font-size: 10pt; }
div.footer h3, div.footer p { font-size: 8pt; }

div.inset { float: right; margin-left: 12px; border: 1px solid silver; padding: 8px; }
div.inset h1 { font-size: 12pt; color: black; font-family: verdana, arial, sans-serif; }
div.inset img { margin:0; padding:0; }

div#donation-form { border: 1px solid silver; padding: 20px; margin-bottom: 20px; width: 230px; height: 50px }
#dollar-sign { float: right; margin-top: 2px; font-weight: bold; color: #F62900; font-size: 20pt; margin-right: 6px; }
#amount { float: right; margin-top: 10px; margin-right: 10px; }
#donate { float: right; margin-right: 10px;}
